{
  "name": "kloow",
  "productName": "Kloow",
  "version": "1.0.0",
  "description": "Kloow Description",
  "author": {
    "name": "Kloow Team",
    "email": "admin@kloow.com"
  },
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make && node scripts/generate-update-manifests.js",
    "make:win": "electron-builder --win nsis --x64 --prepackaged out/Kloow-win32-x64",
    "publish": "electron-forge package && electron-forge make && electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "convert-icon": "node icon.convert.js",
    "clear-cache": "rm -rf ~/Library/Caches/Kloow && rm -rf ~/Library/Application\\ Support/Kloow\n"
  },
  "keywords": [],
  "license": "MIT",
  "build": {
    "appId": "com.kloow.app",
    "productName": "Kloow",
    "directories": {
      "output": "out/builder"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/images/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "src/assets/images/logo.ico",
      "uninstallerIcon": "src/assets/images/logo.ico",
      "installerHeaderIcon": "src/assets/images/logo.ico",
      "installerHeader": "src/assets/images/kloow_banner.bmp",
      "installerSidebar": "src/assets/images/kloow_bg.bmp",
      "uninstallerSidebar": "src/assets/images/kloow_bg.bmp",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "scripts/installer.nsh"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-react": "^7.27.1",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-pkg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron-forge/publisher-electron-release-server": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^3.1.1",
    "@electron/osx-sign": "^2.3.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.11.0",
    "electron": "36.4.0",
    "electron-builder": "^26.8.1",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "node-loader": "^2.1.0",
    "png2icons": "^2.0.1",
    "style-loader": "^3.3.4"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "adm-zip": "^0.5.16",
    "axios": "^1.9.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "electron-dl": "^4.0.0",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.8.3",
    "find-process": "^2.0.0",
    "formik": "^2.4.6",
    "react": "^19.1.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.2",
    "sax": "^1.4.4",
    "semver": "^7.7.3",
    "simplebar-react": "^3.3.1",
    "sudo-prompt": "^9.2.1",
    "yup": "^1.6.1"
  }
}